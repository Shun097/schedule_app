<div class="show-container">
<h1>スケジュール詳細</h1>

<table class="table">
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_date.present? ? @schedule.start_date.strftime("%Y/%m/%d") : "未設定" %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_date.present? ? @schedule.end_date.strftime("%Y/%m/%d") : "未設定" %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @schedule.all_day ? "◯" : " " %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <%= link_to "編集", edit_schedule_path(@schedule), class: "btn btn-primary" %>
  <%= link_to "一覧に戻る", schedules_path, class: "btn btn-secondary" %>
</div>